
<!-- This is the header -->

<section class="timeline">
  <div class="container">

    <div class="timeline-item">
      <div class="timeline-img"></div>
      <div class="timeline-content js--fadeInLeft">
        <h2 class="text-center mb-0">Start of Trip</h2>
      </div>
    </div>

<!-- This is to iterate the posts in the trip -->

    <% @trip.posts.each do |post| %>
      <div class="timeline-item">
        <!-- This is the circle on the line -->
        <div class="timeline-img"></div>
        <div class="timeline-content timeline-card js--fadeInRight">
          <!-- This is the picture class -->
          <%= cl_image_tag post.photos[0].key, class: "timeline-img-header"%>
          <!-- This is the date box format -->
          <div class="timeline-date"><%= post.date.strftime("%d of %b") %></div>
        </div>
        <div class="post-name js--fadeInRight"><%= post.name %></div>
      </div>
    <% end %>

    <div class="timeline-item">
        <!-- This is the circle on the line -->
        <div class="timeline-img"></div>

        <div class="timeline-content timeline-card js--fadeInRight ">
          <!-- This is the picture class -->
          <%= link_to "", new_trip_post_path(@trip), class: "last-timeline-img-header" %>

          <!-- This is the date box format -->
        </div>
        <div class="new-post-text">Please click to create a new post</div>
      </div>

    <div class="fixed-bottom">

      <div id="flip" class="text-center">Click to see trip details</div>

      <div id="panel">
        <div class="d-flex flex-column w-50">
        <!-- This is the left items -->
        <div class="d-flex justify-content-around info-card">
        <!-- This is the trip name -->
        <div class="info-header"><%= @trip.name %></div>
         <!-- This is the end trip button -->
        <%= link_to "End Trip", trip_trip_path(@trip), class: "button-large info-button" %>
      </div>

      <!-- This is the info description -->
      <div class="info-description">
        <%= @trip.description %>
      </div>
      <!-- This is the cities tags -->
<!--       <div class="row row-cols-3 w-auto ml-4 mt-1">
        <span class="info-tag col">China</span>
        <div class="info-tag col">Singapore</div>
        <div class="info-tag col">Singapore</div>
      </div> -->

    </div>
  </div>
</div>

  </div>
</section>
