<!DOCTYPE html>
<html>
  <head>
    <title>Momento</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://kit.fontawesome.com/710f69532c.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_include_tag "application" %>
  </head>

  <body>
    <!-- Start of the navbar -->
      <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
        <a class="navbar-brand-main" href="">
          <img class="logo "src="https://res.cloudinary.com/dzmacq4yx/image/upload/v1585193799/logo_transparent_xb3nrn.png" alt="">
        </a>
        <img class="avatar-bordered dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
      </div>

      <!-- End of the navbar -->
    <% unless @no_container %>
      <div class="main-body">
        <%= yield %>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
<!--      <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p> -->
     <!-- from app/assets/javascripts/application.js -->
    <%= javascript_pack_tag "application" %>
  </body>
</html>
