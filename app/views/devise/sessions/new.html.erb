<div class="full-screen-image" style="background-image: linear-gradient(rgba(255,255,255,0.2), rgba(255,255,255,0.2)), url(https://res.cloudinary.com/dzmacq4yx/image/upload/v1589252767/login-background-image_vqhcvt.jpg)">
  <div class="logo-position">
    <%= cl_image_tag("https://res.cloudinary.com/dzmacq4yx/image/upload/v1585892404/logo_transparent_szxe9j.png", height: 150, width: 150) %>
  </div>
  <div class="header-phrase">
    <h1>The new way to share emotions</h1>
  </div>

  <%= button_tag(type: 'button', id: "modal-button", class: "button-large position-bottom") do %>
    Log in
  <% end %>
</div>




<div id="modal-test" class="modal">
  <div class="modal-content animate">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>
    <div id="login-or">OR</div>
    <%= render "devise/shared/links" %>
  </div>
</div>

<% @no_container = true %>
<% @no_navbar = true %>
