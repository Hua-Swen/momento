<h1>EDIT TRIPS </h1>

<%= form_for(@trip) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :start_date %>
  <%= f.text_field :start_date %>

  <%= f.label :end_date %>
  <%= f.text_field :end_date %>

  <%= f.submit %>
<% end %>

<%= link_to "Delete", admin_trip_path(@trip),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
